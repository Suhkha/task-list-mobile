@import 'nib'

$purple 		= #5C4979
$yellow 		= #FBC023
$red 			= #F9585F  
$gray 			= #ADB5C6
$gray__light 	= #EEEEEE
$purple_light 	= #EEECFA
$purple_dark 	= #46457D

body 
	background $purple_light
	font-family 'Hind', sans-serif

.border
	border-bottom solid 2px $gray__light
	width 90%
	margin 30px 0
	float right
.row
	padding 15px 30px 0 30px
	
.col-sm-1
.col-xs-1
	padding 0 5px 

input[type=checkbox] 
	display:none;

.checkbox__mask
	font-size 20px

input[type=checkbox] + .checkbox__mask:before
	content: '\f096'
	letter-spacing: 10px
	font-family: FontAwesome
	display: inline-block
	
input[type=checkbox]:checked + .checkbox__mask:before
	content: '\f046'
	font-family: FontAwesome
	letter-spacing: 5px
	
.task
	background white
	&__header
		background-image url('../images/header__task-list.jpg')
		background-position center center
		background-size cover
		background-repeat no-repeat
		position relative
		height 30vh
		&:before
			content ''
			position absolute
			background-image linear-gradient(to right, $purple, $purple_dark 40% )
			opacity 0.7
			top 0
			right 0
			bottom 0
			left 0
		&--title 
			color white
			font-size 40px
			position absolute
			bottom 30px
			left 30px
	&__button--add
		.fa-plus
			background $red
			color white 
			font-size 50px
			position absolute
			bottom -30px
			border-radius 30px
			padding 5px 10px
			right 30px
	&__list
		&--day 
			color $gray
			text-transform uppercase
			font-size 20px
			display block
			padding 15px 30px
		&--icon
			.fa
				color $purple
				font-size 25px
				line-height 1
				margin-left 5px
		&--item
			padding 0 0 0 5px
		&--title
		&--description
			display block
		&--title
			color $purple_dark
			font-size 18px
			font-weight bold
		&--description
			color $gray
			font-size 16px
		&--star
			color $yellow
			font-size 25px



	

		
	